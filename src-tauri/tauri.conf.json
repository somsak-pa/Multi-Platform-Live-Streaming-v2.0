{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "live-show",
  "version": "1.0.0",
  "identifier": "com.live-show.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Multi-Platform Live Streaming",
        "width": 1280,
        "height": 720,
        "minWidth": 1024,
        "minHeight": 768,
        "maximized": true,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
