{
  "name": "live-show",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "electron-build": "electron-builder --windows --publish never",
    "dist": "electron-builder --mac --windows",
    "electron-dev": "concurrently \"npm run dev\" \"electron .\""
  },
  "dependencies": {
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-opener": "^2",
    "node-fetch": "^2.7.0",
    "obs-websocket-js": "^5.0.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tauri-apps/cli": "^2.6.2",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.21",
    "electron": "^37.2.1",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.6.2",
    "vite": "^6.0.3"
  },
  "main": "electron.cjs",
  "build": {
    "appId": "com.yourcompany.liveshow",
    "productName": "Live Show",
    "files": [
      {
        "from": "dist",
        "to": "app",
        "filter": [
          "**/*"
        ]
      },
      "electron.cjs"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "installerIcon": "build/installer.ico",
      "uninstallerIcon": "build/uninstaller.ico",
      "uninstallDisplayName": "Live Show Uninstaller",
      "license": "LICENSE.txt",
      "allowToChangeInstallationDirectory": true
    }
  }
}
